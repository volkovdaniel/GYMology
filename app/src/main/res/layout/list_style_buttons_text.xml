<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:gravity="center_vertical"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/gradient">


    <RelativeLayout

            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:id="@+id/list_layout">


        <TextView
                android:id="@+id/list_data"
                android:layout_width="168dp"
                android:layout_height="65dp"
                android:textSize="14sp"
                android:layout_alignParentStart="true" android:layout_marginTop="4dip"
                android:layout_marginStart="4dip" android:layout_marginEnd="79dp"
                android:layout_marginBottom="4dip" android:layout_toStartOf="@+id/btn_add"/>
        <Button
                android:id="@+id/btn_add"
                android:layout_width="69dp"
                android:layout_height="51dp"
                android:layout_marginTop="10dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="4dip" android:layout_marginBottom="4dip"
                android:layout_toStartOf="@+id/btn_clear" android:layout_marginEnd="10dp"
                app:icon="@drawable/ic_edit_icon"
                app:iconTint="#ffffff"/>
        <Button
                android:id="@+id/btn_edit"
                android:layout_width="69dp"
                android:layout_height="51dp"
                android:layout_marginTop="12dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="4dip" android:layout_marginBottom="4dip"
                android:layout_toStartOf="@+id/btn_clear" android:layout_marginEnd="85dp"
                app:icon="@drawable/ic_edit_icon"
                app:iconTint="#ffffff"/>
        <Button
                android:id="@+id/btn_clear"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                app:iconGravity="start|textStart"
                android:layout_alignParentEnd="true" android:layout_marginTop="13dp"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="2dp" app:iconTint="#ffffff"
                app:icon="@drawable/ic_clear_icon"/>
    </RelativeLayout>


</LinearLayout>
